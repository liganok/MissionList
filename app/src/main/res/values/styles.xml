<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!--<item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="title_btn_style">
        <item name="android:background">#3fa9f5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="title_btn_normal_style">
        <item name="android:background">#bcbcbc</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="tv_list_title">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="tv_list_des">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="tv_list_date">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#999999</item>
    </style>
































</resources>
