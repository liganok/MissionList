<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!--<item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="title_btn_style">
        <item name="android:background">@drawable/btn_title_todo_pressed</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="title_btn_normal_style">
        <item name="android:background">@drawable/btn_title_done_nomal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="tv_list_title">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="tv_list_des">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="tv_list_date">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="tv_new_head_style">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="rl_new">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="tv_new">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="et_new">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">#ffffff</item>
    </style>

































</resources>
