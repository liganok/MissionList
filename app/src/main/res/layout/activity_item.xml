<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/text_group_margin"
    android:layout_marginRight="@dimen/text_group_margin"
    android:layout_marginTop="@dimen/text_group_margin"
    tools:context="com.missionlist.ItemActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_text_group"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_padding_left"
                android:shrinkColumns="1">

                <TableRow>
                    <TextView
                        style="@style/tv_new"
                        android:text = "Title"
                        android:id="@+id/tv_new_title" />
                    <EditText
                        style="@style/et_new"
                        android:id="@+id/et_new_title" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_line_color" />

                <TableRow>
                    <TextView
                        style="@style/tv_new"
                        android:text = "Description"
                        android:id="@+id/tv_new_des" />
                    <EditText
                        style="@style/et_new"
                        android:inputType="textMultiLine"
                        android:id="@+id/et_new_des" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_text_group"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_padding_left"
                android:shrinkColumns="1">

                <TableRow>
                    <TextView
                        style="@style/tv_new"
                        android:layout_column="1"
                        android:text = "Start Date"
                        android:id="@+id/tv_new_start_date" />

                    <EditText
                        style="@style/et_new"
                        android:layout_column="1"
                        android:id="@+id/et_new_start_date"
                        android:layout_toRightOf="@+id/tv_new_start_date" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_line_color" />

                <TableRow>
                    <TextView
                        style="@style/tv_new"
                        android:text = "Due Date"
                        android:id="@+id/tv_new_due_date" />
                    <EditText
                        style="@style/et_new"
                        android:id="@+id/et_new_due_date"
                        android:layout_toRightOf="@+id/tv_new_due_date" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_line_color" />

                <TableRow>
                    <TextView
                        style="@style/tv_new"
                        android:text = "Priority"
                        android:id="@+id/tv_new_priority" />
                    <Spinner
                        style="@style/et_new"
                        android:entries="@array/priority"
                        android:id="@+id/spinner_priority">
                    </Spinner>

                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/default_line_color" />

                <TableRow>
                    <TextView
                        style="@style/tv_new"
                        android:text = "Occurrence"
                        android:id="@+id/tv_new_occurrence" />
                    <EditText
                        style="@style/et_new"
                        android:id="@+id/et_new_occurrence"
                        android:layout_toRightOf="@+id/tv_new_occurrence" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
