<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/text_group_margin"
    android:layout_marginRight="6dp"
    android:layout_marginTop="@dimen/text_group_margin"
    tools:context="com.missionlist.ItemActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                style="@style/text_group_top"
                android:id="@+id/relativeLayout">
                <TextView
                    style="@style/tv_new"
                    android:text = "Title"
                    android:id="@+id/tv_new_title" />

                <EditText
                    style="@style/et_new"
                    android:id="@+id/et_new_title"
                    android:layout_toRightOf="@+id/tv_new_title" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/text_group_middle"
                android:id="@+id/relativeLayout1"
                android:layout_below="@+id/relativeLayout">
                <TextView
                    style="@style/tv_new"
                    android:text = "Start Date"
                    android:id="@+id/tv_new_start_date" />

                <EditText
                    style="@style/et_new"
                    android:id="@+id/et_new_start_date"
                    android:layout_toRightOf="@+id/tv_new_start_date" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/text_group_middle"
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/relativeLayout1">
                <TextView
                    style="@style/tv_new"
                    android:text = "Due Date"
                    android:id="@+id/tv_new_due_date" />
                <EditText
                    style="@style/et_new"
                    android:id="@+id/et_new_due_date"
                    android:layout_toRightOf="@+id/tv_new_due_date" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/text_group_middle"
                android:id="@+id/relativeLayout3"
                android:layout_below="@+id/relativeLayout2">
                <TextView
                    style="@style/tv_new"
                    android:text = "Priority"
                    android:id="@+id/tv_new_priority" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_new_priority">
                    <Spinner
                        style="@style/et_new"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/spinner_priority">
                    </Spinner>
                </LinearLayout>

                <EditText
                    style="@style/et_new"
                    android:id="@+id/et_priority"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/tv_new_priority" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/text_group_middle"
                android:id="@+id/relativeLayout4"
                android:layout_below="@+id/relativeLayout3">
                <TextView
                    style="@style/tv_new"
                    android:text = "Occurrence"
                    android:id="@+id/tv_new_occurrence" />
                <EditText
                    style="@style/et_new"
                    android:id="@+id/et_new_occurrence"
                    android:layout_toRightOf="@+id/tv_new_occurrence" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/text_group_bottom"
                android:id="@+id/relativeLayout5"
                android:layout_below="@+id/relativeLayout4">
                <TextView
                    style="@style/tv_new"
                    android:text = "Description"
                    android:id="@+id/tv_new_des" />
                <EditText
                    style="@style/et_new"
                    android:inputType="textMultiLine"
                    android:id="@+id/et_new_des"
                    android:layout_toRightOf="@+id/tv_new_des" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        style="@style/et_new"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/scrollView2"
        android:showDividers="beginning"
        android:divider="@color/activity_bg_color">

        <EditText
            style="@style/et_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText2"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="?android:attr/listDivider"
            />

        <EditText
            style="@style/et_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:ems="10"
            android:text="test1" />
    </LinearLayout>

</RelativeLayout>
