<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.missionlist.ui.activity.DialogActivity">

    <RelativeLayout
        style="@style/rl_dialog">

        <RelativeLayout
            android:id="@+id/rl_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="60dp">
            <TextView
                style="@style/tv_dialog_title"
                android:id="@+id/tv_dialog_title"
                android:text="Title"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/rl_dialog_space"
            android:id="@+id/rl_dialog_space1"
            android:layout_below="@id/rl_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="1dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dialog_set_status"
            android:layout_below="@id/rl_dialog_space1"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/tv_dialog_action"
                android:id="@+id/tv_dialog_action"
                android:text="Set to done"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/rl_dialog_space"
            android:id="@+id/rl_dialog_space2"
            android:layout_below="@id/rl_dialog_set_status"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dialog_delete"
            android:layout_below="@id/rl_dialog_space2"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/tv_dialog_action"
                android:text="Delete"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
