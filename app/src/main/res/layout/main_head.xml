<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    style="@style/title_bar_style" >

    <ImageView
        android:id="@+id/btn_category"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/btn_common"
        android:padding="0.0dip"
        android:src="@drawable/btn_category"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/top_head_container"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/top_head"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_head"
            android:padding="2.0dip"
            android:src="@drawable/default_round_head"
            android:scaleType="fitXY" />
    </FrameLayout>

    <ImageView
        android:id="@+id/top_more"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/title_click_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            style="@style/title_btn_style"
            android:id="@+id/btn_todo"
            android:text="hello"
            android:layout_width="@dimen/head_button_width"
            android:layout_height="@dimen/head_button_height"
            android:layout_marginRight="0.25px"
            android:layout_centerVertical="true"/>
        <Button
            style="@style/title_btn_normal_style"
            android:id="@+id/btn_done"
            android:text="hello"
            android:layout_width="@dimen/head_button_width"
            android:layout_height="@dimen/head_button_height"
            android:layout_marginLeft="0.25px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_todo"/>

    </RelativeLayout>

</RelativeLayout>